<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="@dimen/widget1_size"
    android:minHeight="@dimen/widget1_size"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    android:gravity="center"
    android:background="@drawable/widget_background">

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/widget_city_size"
        android:textColor="@android:color/white"
        android:layout_marginBottom="@dimen/widget_margin_bottom"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="@dimen/widget_icon_size"
        android:layout_height="@dimen/widget_icon_size"
        android:contentDescription="@string/weather"
        android:src="@drawable/weather_icon"
        android:layout_marginBottom="@dimen/widget_margin_bottom"/>

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_size"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
</LinearLayout>